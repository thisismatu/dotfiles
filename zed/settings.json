// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // Assistant
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "edit_predictions": {
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/secrets.yml"
    ],
    "mode": "subtle"
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_width": 640
  },
  // UI
  "theme": "One Dark",
  "ui_font_size": 16,
  "ui_font_family": "Inter Variable",
  "buffer_font_size": 14,
  "buffer_font_family": "Meslo LG S",
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "tabs": {
    "git_status": true,
    "activate_on_close": "left_neighbour"
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "project_panel": {
    "default_width": 320
  },
  "git_panel": {
    "default_width": 320
  },
  "outline_panel": {
    "default_width": 320
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false,
    "default_width": 320
  },
  "journal": {
    "path": "~/My Drive",
    "hour_format": "hour24"
  },
  "terminal": {
    "cursor_shape": "bar",
    "line_height": "standard"
  },
  // Writing
  "vim_mode": false,
  "base_keymap": "VSCode",
  "tab_size": 2,
  "soft_wrap": "editor_width",
  "cursor_blink": false,
  "autosave": "on_window_change",
  "format_on_save": "on",
  "extend_comment_on_newline": false,
  "lsp_highlight_debounce": 50,
  "preferred_line_length": 100,
  // Languages & files
  "languages": {
    "Nunjucks": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Markdown": {
      "format_on_save": "off",
      "remove_trailing_whitespace_on_save": false
    },
    "XML": {
      "preferred_line_length": 500
    },
    "Ruby": {
      "tab_size": 2,
      "language_servers": ["ruby-lsp", "rubocop", "tailwindcss-language-server", "!solargraph"],
      "formatter": "language_server"
    },
    "HTML/ERB": {
      "tab_size": 2,
      "language_servers": ["ruby-lsp", "tailwindcss-language-server", "emmet-language-server"],
      "formatter": {
        "external": {
          "command": "erb-formatter",
          "arguments": ["--stdin-filename", "{buffer_path}"]
        }
      }
      // Previous version, works with tailwind auto sort tags
      // "formatter": {
      //   "external": {
      //     "command": "erb-formatter",
      //     "arguments": [
      //       "--stdin",
      //       "--tailwind-output-path", // Comment out if on non-tailwind project
      //       "app/assets/builds/tailwind.css" // Generate this by running bin/rails tailwindcss:build
      //     ]
      //   }
      // }
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*'([^']*)'", "\\bclass:\\s*\"([^\"]*)\""]
        }
      }
    }
  }
}
