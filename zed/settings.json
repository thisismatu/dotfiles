// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // Assistant
  "edit_predictions": {
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/secrets.yml"
    ]
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2"
  },
  // UI
  "theme": "One Dark",
  "ui_font_size": 15,
  "buffer_font_size": 12.5,
  "buffer_font_family": "Meslo LG S",
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "tabs": {
    "git_status": true,
    "activate_on_close": "left_neighbour"
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "project_panel": {
    "default_width": 300
  },
  "outline_panel": {
    "default_width": 300
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never",
    "default_width": 300
  },
  "notification_panel": {
    "button": false,
    "default_width": 300
  },
  "journal": {
    "path": "~/My Drive",
    "hour_format": "hour24"
  },
  "terminal": {
    "cursor_shape": "bar",
    "line_height": "standard"
  },
  "experimental.theme_overrides": {
    "editor.document_highlight.read_background": "#fff2"
  },
  // Writing
  "base_keymap": "VSCode",
  "tab_size": 2,
  "soft_wrap": "editor_width",
  "cursor_blink": false,
  "autosave": "on_window_change",
  "format_on_save": "on",
  "extend_comment_on_newline": false,
  "lsp_highlight_debounce": 50,
  // Languages & files
  "languages": {
    "Markdown": {
      "remove_trailing_whitespace_on_save": false
    },
    "Ruby": {
      "language_servers": [
        "solargraph",
        "rubocop",
        "tailwindcss-language-server",
        "!ruby-lsp"
      ],
      "formatter": {
        "external": {
          "command": "./bin/bundle",
          "arguments": [
            "exec",
            "rubocop",
            "--auto-correct",
            "--stdin",
            "corrected.rb",
            "--stderr"
          ]
        }
      }
    },
    "ERB": {
      "formatter": {
        "external": {
          "command": "erb-formatter",
          "arguments": [
            "--stdin",
            "--tailwind-output-path", // Comment out if on non-tailwind project
            "app/assets/builds/tailwind.css" // Generate this by running bin/rails tailwindcss:build
          ]
        }
      }
    }
  },
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    },
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": false
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*'([^']*)'", "\\bclass:\\s*\"([^\"]*)\""]
        }
      }
    }
  },
  "file_types": {
    "HTML": ["njk"]
  }
}
